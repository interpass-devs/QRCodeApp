<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".View.QRCodeActivity"
    android:background="@color/white"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/back_btn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="←  코드생성"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1f2226"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_lottie"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="right"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/shake_phone_blue"/>
    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/shake_phone_person"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR코드"
                android:textSize="30sp"
                android:textColor="#2578E6"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="를  생성하려면"
                android:textSize="25sp"
                android:textColor="#1f2226"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핸드폰을"
                android:textSize="25sp"
                android:textColor="#1f2226"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  흔들어주세요."
                android:textSize="30sp"
                android:textColor="#2578E6"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>